<UserControl x:Class="Notes.APP.CustomCtrls.MessagePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="30" 
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Popup x:Name="PopupMessage" HorizontalOffset="10"  Placement="Bottom" StaysOpen="False" Height="30"  Grid.ColumnSpan="2" Margin="100">
            <Border x:Name="MessageBorder" Background="LightGray" Padding="5" CornerRadius="5" Opacity="0.9">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="MessageIcon" FontSize="12" />
                    <TextBlock x:Name="MessageText" Text="21321" FontSize="14" Foreground="Black"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>

