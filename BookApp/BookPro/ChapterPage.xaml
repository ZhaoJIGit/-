      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookPro"
      mc:Ignorable="d"
      Title="ChapterPage" Height="170" Width="351">

    <Grid>
        <ListBox x:Name="LineListBox" SelectionChanged="LineListBox_SelectionChanged" Margin="0,30,0,0"/>
        <Button Content="返回" Click="Button_Click" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" x:Name="txt" Margin="56,7,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Content="跳转" Click="Jump_Click" HorizontalAlignment="Left" Margin="190,6,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
